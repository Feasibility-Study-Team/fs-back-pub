// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id_admin String @id @default(uuid())
  username String @unique
  password String
}

model institusi {
  id_institusi String @id @default(uuid())
  nama_institusi String
  alamat String
  nomor String
}

model inventor {
  id_inventor String @id @default(uuid())
  username String @unique
  email String @unique
  nama_lengkap String
  id_institusi String
  password String
  nomor String
  photo String
}

model alat {
  id_alat String @id @default(uuid())
  nama_alat String
  deskripsi_alat String
  id_inventor String 
  gambar_alat String
}

model aspek {
  id_aspek String @id @default(uuid())
  nama String
}

model parameter {
  id_parameter String @id @default(uuid())
  nama String
  id_aspek String
}

model data_aspek {
  id_data_aspek String @id @default(uuid())
  nama String
  id_parameter String
}

model pengujian {
  id_pengujian String @id @default(uuid())
  id_aspek String
  id_alat String
  status String
  hasil_uji String
}

model transaksi {
  id_transaksi String @id @default(uuid())
  id_pengujian String
  id_penguji String
}

model penguji {
  id_penguji String @id @default(uuid())
  username String @unique
  email String @unique
  nama_lengkap String
  id_institusi String
  password String
  nomor String
}